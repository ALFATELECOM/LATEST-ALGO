# Application Settings
APP_NAME=ALFA ALGO Trading System
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/alfa_algo_trading
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Zerodha API
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_REDIRECT_URL=http://localhost:3000/auth/callback
ZERODHA_BASE_URL=https://api.kite.trade

# CORS
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://your-frontend-domain.vercel.app"]

# Trading Settings
MAX_POSITION_SIZE=100000.0
MAX_DAILY_LOSS=5000.0
MAX_DAILY_TRADES=50
DEFAULT_STOP_LOSS_PERCENT=2.0
DEFAULT_TRAILING_STOP_PERCENT=1.0

# Risk Management
ENABLE_RISK_MANAGEMENT=true
MAX_PORTFOLIO_RISK=0.02
MAX_CORRELATION_RISK=0.3

# Data Settings
ENABLE_REAL_TIME_DATA=true
DATA_CACHE_TTL=60
HISTORICAL_DATA_DAYS=365

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/alfa_algo.log
ENABLE_STRUCTURED_LOGGING=true

# Monitoring
ENABLE_SENTRY=false
SENTRY_DSN=

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Strategy Settings
ENABLE_STRATEGY_BACKTESTING=true
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=100000.0

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=[".csv",".xlsx",".json"]
